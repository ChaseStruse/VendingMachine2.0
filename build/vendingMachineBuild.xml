s<?xml version="1.0" encoding="UTF-8"?>
<project name="vendmachinefinal" default="all">
  
  
  <property file="vendingMachineBuild.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="lib/ant-javafx.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javafx-mx.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/packager.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="lib/tools.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module VendMachineFinal -->
  
  <dirname property="module.vendmachinefinal.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.vendmachinefinal" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.vendmachinefinal" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.vendmachinefinal" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.vendmachinefinal" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="vendmachinefinal.output.dir" value="${module.vendmachinefinal.basedir}/out/production/VendMachineFinal"/>
  <property name="vendmachinefinal.testoutput.dir" value="${module.vendmachinefinal.basedir}/out/test/VendMachineFinal"/>
  
  <path id="vendmachinefinal.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="vendmachinefinal.module.production.classpath">
    <path refid="${module.jdk.classpath.vendmachinefinal}"/>
  </path>
  
  <path id="vendmachinefinal.runtime.production.module.classpath">
    <pathelement location="${vendmachinefinal.output.dir}"/>
  </path>
  
  <path id="vendmachinefinal.module.classpath">
    <path refid="${module.jdk.classpath.vendmachinefinal}"/>
    <pathelement location="${vendmachinefinal.output.dir}"/>
    <pathelement location="${idea.home}/plugins/junit/lib/junit-jupiter-api-5.0.0-M4.jar"/>
    <pathelement location="${idea.home}/plugins/junit/lib/opentest4j-1.0.0-M2.jar"/>
  </path>
  
  <path id="vendmachinefinal.runtime.module.classpath">
    <pathelement location="${vendmachinefinal.testoutput.dir}"/>
    <pathelement location="${vendmachinefinal.output.dir}"/>
    <pathelement location="${idea.home}/plugins/junit/lib/junit-jupiter-api-5.0.0-M4.jar"/>
    <pathelement location="${idea.home}/plugins/junit/lib/opentest4j-1.0.0-M2.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.vendmachinefinal">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.vendmachinefinal">
    <patternset refid="excluded.from.module.vendmachinefinal"/>
  </patternset>
  
  <path id="vendmachinefinal.module.sourcepath">
    <dirset dir="${module.vendmachinefinal.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  <path id="vendmachinefinal.module.test.sourcepath">
    <dirset dir="${module.vendmachinefinal.basedir}">
      <include name="test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.vendmachinefinal" depends="compile.module.vendmachinefinal.production,compile.module.vendmachinefinal.tests" description="Compile module VendMachineFinal"/>
  
  <target name="compile.module.vendmachinefinal.production" depends="register.custom.compilers" description="Compile module VendMachineFinal; production classes">
    <mkdir dir="${vendmachinefinal.output.dir}"/>
    <javac2 destdir="${vendmachinefinal.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.vendmachinefinal}/javac">
      <compilerarg line="${compiler.args.vendmachinefinal}"/>
      <bootclasspath refid="vendmachinefinal.module.bootclasspath"/>
      <classpath refid="vendmachinefinal.module.production.classpath"/>
      <src refid="vendmachinefinal.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.vendmachinefinal"/>
    </javac2>
    
    <copy todir="${vendmachinefinal.output.dir}">
      <fileset dir="${module.vendmachinefinal.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.vendmachinefinal.tests" depends="register.custom.compilers,compile.module.vendmachinefinal.production" description="compile module VendMachineFinal; test classes" unless="skip.tests">
    <mkdir dir="${vendmachinefinal.testoutput.dir}"/>
    <javac2 destdir="${vendmachinefinal.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.vendmachinefinal}/javac">
      <compilerarg line="${compiler.args.vendmachinefinal}"/>
      <bootclasspath refid="vendmachinefinal.module.bootclasspath"/>
      <classpath refid="vendmachinefinal.module.classpath"/>
      <src refid="vendmachinefinal.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.vendmachinefinal"/>
    </javac2>
    
    <copy todir="${vendmachinefinal.testoutput.dir}">
      <fileset dir="${module.vendmachinefinal.basedir}/test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.vendmachinefinal" description="cleanup module">
    <delete dir="${vendmachinefinal.output.dir}"/>
    <delete dir="${vendmachinefinal.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.vendmachinefinal" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.vendmachinefinal" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>